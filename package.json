{
  "name": "home-chef-delivery",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:shared": "pnpm --filter @home-chef/shared build",
    "build:web": "pnpm --filter @home-chef/web build",
    "build:admin": "pnpm --filter @home-chef/admin build",
    "build": "pnpm build:shared && pnpm build:web && pnpm build:admin",
    "lint": "pnpm --filter @home-chef/web lint && pnpm --filter @home-chef/admin lint",
    "typecheck": "pnpm --filter @home-chef/shared build && pnpm --filter @home-chef/web exec tsc --noEmit && pnpm --filter @home-chef/admin exec tsc --noEmit",
    "test": "pnpm --filter @home-chef/shared test -- --run && pnpm --filter @home-chef/data test -- --run",
    "test:coverage": "pnpm --filter @home-chef/shared test -- --run --coverage && pnpm --filter @home-chef/data test -- --run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "seed": "npx tsx scripts/seed.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2"
  }
}
