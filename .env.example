# Demo Mode - set to true ONLY for development/testing
# WARNING: Demo mode bypasses authentication. NEVER use in production!
DEMO_MODE=false

# Database Configuration
# Local development:
DATABASE_URL=postgresql://ridendine:ridendine_dev_password@localhost:5432/ridendine
# Production: Set to your PostgreSQL connection string (Render/Heroku provide this)

# Authentication Passwords
# DEPRECATED: Use JWT-based auth below instead
ADMIN_PASSWORD=Admin0123

# JWT Authentication (Production)
# Generate a secure random secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_secure_random_string_min_32_chars
JWT_EXPIRES_IN=24h

# Admin Credentials (bcrypt hashed password)
# Generate hash: node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('YourPassword', 10).then(h => console.log(h))"
ADMIN_EMAIL=admin@ridendine.com
ADMIN_PASSWORD_HASH=$2a$10$example.hash.here

# Chef Credentials (optional, defaults used in development)
CHEF_EMAIL=chef@ridendine.com
CHEF_PASSWORD=chef123
# CHEF_PASSWORD_HASH=$2b$10$...

# Driver Credentials (optional, defaults used in development)
DRIVER_EMAIL=driver@ridendine.com
DRIVER_PASSWORD=driver123
# DRIVER_PASSWORD_HASH=$2b$10$...

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Application Base URL (used for redirects, webhooks)
APP_BASE_URL=http://localhost:3000

# Frontend URL (for CORS configuration)
# Set to your frontend URL in production (e.g., https://yourdomain.com)
# For GitHub Pages: https://username.github.io/repo-name
FRONTEND_URL=http://localhost:3000

# Cooco Integration
COOCO_WEBHOOK_SECRET=your_cooco_secret

# Mealbridge Integration
MEALBRIDGE_API_KEY=your_mealbridge_key
MEALBRIDGE_BASE_URL=https://api.mealbridge.com

# Session Secret
SESSION_SECRET=change_this_to_a_random_string

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
DISABLE_RATE_LIMIT=false

# GitHub Pages Origin (for CORS configuration)
# Set this to your GitHub Pages URL when deploying backend separately
GITHUB_PAGES_ORIGIN=https://seancfafinlay.github.io
