# apps/web — required environment variables
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service role key (server-side only — needed for webhooks)
SUPABASE_SERVICE_ROLE_KEY=

# Stripe (server-side only — never use NEXT_PUBLIC_ for secrets)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: Public Stripe publishable key (safe to expose)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Webhook authentication secret (sent via x-webhook-secret header)
WEBHOOK_SECRET=
